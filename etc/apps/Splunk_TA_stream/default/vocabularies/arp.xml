<?xml version="1.0" encoding="UTF-8"?>
<CmConfig xmlns="http://purl.org/cloudmeter/config" version="7.2.0">
  <Vocabulary id="arp">
    <Name>ARP Protocol Vocabulary</Name>
    <Locked>true</Locked>
    <Term id="arp.event">
      <Type>object</Type>
      <Comment>ARP protocol event</Comment>
    </Term>
    <Term id="arp.opcode">
      <Type>shortstring</Type>
      <Comment>Operation code, Request = 1, Response = 2</Comment>
    </Term>
    <Term id="arp.protocol-type">
      <Type>uint16</Type>
      <Comment>Protocol number in the ARP message</Comment>
    </Term>
    <Term id="arp.protocol-size">
      <Type>uint8</Type>
      <Comment>Size in bytes of the logical address requested</Comment>
    </Term>
    <Term id="arp.hardware-type">
      <Type>uint16</Type>
      <Comment>Hardware type for which the request is sent</Comment>
    </Term>
    <Term id="arp.hardware-size">
      <Type>uint8</Type>
      <Comment>Hardware (Mac) address length</Comment>
    </Term>
    <Term id="arp.src-mac">
      <Type>shortstring</Type>
      <Comment>ARP sender MAC address in hexadecimal format in ARP packet header</Comment>
    </Term>
    <Term id="arp.dest-mac">
      <Type>shortstring</Type>
      <Comment>ARP destination MAC address in hexadecimal format in ARP packet header</Comment>
    </Term>
  </Vocabulary>
</CmConfig>
