<form stylesheet="application.css" theme="dark">
  <label>Messages</label>
  <search id="baseSearch">
    <query>`slack_index` sourcetype="slack:messages" team_id=$team$ | stats count by _time user channel </query>
    <earliest>$earliest$</earliest>
    <latest>$latest$</latest>
  </search>
  <search id="attachmentSearch">
    <query>`slack_index` sourcetype=slack:messages team_id=$team$ files{}.name=* | stats count by _time files{}.mimetype files{}.size files{}.name user channel</query>
    <earliest>$earliest$</earliest>
    <latest>$latest$</latest>
  </search>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="dropdown" token="team">
      <label>Company</label>
      <search>
        <query>`slack_index` sourcetype=slack:logins | dedup team_id | table team_id team</query>
        <earliest>-1h@h</earliest>
        <latest>now</latest>
      </search>
      <fieldForLabel>team</fieldForLabel>
      <fieldForValue>team_id</fieldForValue>
      <choice value="*">*</choice>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Activity</title>
        <search base="baseSearch">
          <query>timechart sum(count) as count</query>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">-45</option>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.text">Message Count</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.seriesColors">[#4EC29F,#87D3E0,#EBB538]</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Top Users</title>
        <search base="baseSearch">
          <query>top user | sort - count | table user count | rename user as Username count as "Message Count"</query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.seriesColors">[#4EC29F,#87D3E0,#EBB538]</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Channels</title>
        <search base="baseSearch">
          <query>top channel | sort - count | table channel count | rename channel as Channel count as "Message Count"</query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.seriesColors">[#4EC29F,#87D3E0,#EBB538]</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Uploads by Type</title>
        <search base="attachmentSearch">
          <query>stats count by files{}.mimetype | rename files{}.mimetype as "File Type"</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.seriesColors">[#4EC29F,#87D3E0,#EBB538]</option>
      </chart>
    </panel>
    <panel>
      <table>
        <title>Largest Files Uploaded</title>
        <search base="attachmentSearch">
          <query>eval filesize_megabytes=round((('files{}.size'/1024)/1024),2) | table filesize_megabytes files{}.name user channel | sort - filesize_megabytes limit=10 | rename filesize_megabytes as "File Size (MB)" files{}.name as "File Name" user as Username channel as Channel</query>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="number" field="File Size">
          <option name="unit">MB</option>
          <option name="useThousandSeparators">false</option>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Users with Largest Total Uploads</title>
        <search base="attachmentSearch">
          <query>eval filesize_megabytes=round((('files{}.size'/1024)/1024),2)| stats sum(filesize_megabytes) as tot_fsize by user | table user tot_fsize | sort - tot_fsize | rename user as Username tot_fsize as "File Size (MB)"</query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.text">File Size (MB)</option>
        <option name="charting.axisY.scale">log</option>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.seriesColors">[#4EC29F,#87D3E0,#EBB538]</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Channels with Largest Total Uploads</title>
        <search base="attachmentSearch">
          <query>eval  filesize_megabytes=round((('files{}.size'/1024)/1024),2)| stats sum(filesize_megabytes) as tot_fsize by channel | table channel tot_fsize | sort - tot_fsize | rename channel as Channel tot_fsize as "File Size (MB)"</query>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.text">File Size (MB)</option>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.seriesColors">[#4EC29F,#87D3E0,#EBB538]</option>
      </chart>
    </panel>
  </row>
</form>