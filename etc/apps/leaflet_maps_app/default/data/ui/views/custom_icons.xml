<form>
  <label>Marker Icon Customization</label>
  <fieldset submitButton="false"></fieldset>
  <row>
    <panel>
      <input type="dropdown" token="prefix" searchWhenChanged="true">
        <label>Icon Set</label>
        <choice value="fa">Fontawesome</choice>
        <choice value="ion">Ionicons</choice>
        <choice value="glyphicon">Glyphicons</choice>
        <initialValue>fa</initialValue>
        <prefix>"</prefix>
        <suffix>"</suffix>
      </input>
      <input type="radio" token="iconOnly" searchWhenChanged="true">
        <label>Icon Only</label>
        <choice value="icon">Yes</choice>
        <choice value="png">No</choice>
        <default>png</default>
        <initialValue>png</initialValue>
      </input>
      <input type="dropdown" token="iconSize" searchWhenChanged="true">
        <label>Icon Size (Icon Only)</label>
        <choice value="fa-lg">fa-lg</choice>
        <choice value="fa-2x">fa-2x</choice>
        <choice value="fa-3x">fa-3x</choice>
        <choice value="fa-4x">fa-4x</choice>
        <choice value="fa-5x">fa-5x</choice>
        <default>fa-2x</default>
        <initialValue>fa-2x</initialValue>
      </input>
      <viz type="leaflet_maps_app.maps-plus">
        <search>
          <query>| inputlookup chicago-crime.csv
| eval prefix=$prefix$, markerType="$iconOnly$"
| eval icon1=case(like(prefix, "fa"), "exclamation-triangle", like(prefix, "ion"), "add-circle-outline", like(prefix, "glyphicon"), "exclamation-sign"),
icon2=case(like(prefix, "fa"), "battery-2", like(prefix, "ion"), "battery-full", like(prefix, "glyphicon"), "ban-circle"),
icon3=case(like(prefix, "fa"), "gavel", like(prefix, "ion"), "bicycle", like(prefix, "glyphicon"), "euro"),
icon4=case(like(prefix, "fa"), "building", like(prefix, "ion"), "key", like(prefix, "glyphicon"), "pushpin"),
icon5=case(like(prefix, "fa"), "shopping-cart", like(prefix, "ion"), "ios-cart", like(prefix, "glyphicon"), "piggy-bank"),
icon6=case(like(prefix, "fa"), "flask", like(prefix, "ion"), "man", like(prefix, "glyphicon"), "knight"),
icon7=case(like(prefix, "fa"), "car", like(prefix, "ion"), "boat", like(prefix, "glyphicon"), "tree-conifer"),
icon8=case(like(prefix, "fa"), "hand-lizard-o", like(prefix, "ion"), "nuclear", like(prefix, "glyphicon"), "wrench")
| eval markerColor=case(like(description, "%SIMPLE%"), "red", like(description, "%DOMESTIC BATTERY%"), "pink", like(description, "%500 AND UNDER%"), "green", like(description, "%TO PROPERTY%"), "orange", like(description, "%RETAIL THEFT%"), "darkred", like(description, "%TO VEHICLE%"), "cadetblue", 1=1, "blue"),
icon=case(like(description, "%SIMPLE%"), icon1, like(description, "%DOMESTIC BATTERY%"), icon2, like(description, "%500 AND UNDER%"), icon3, like(description, "%TO PROPERTY%"), icon4, like(description, "%RETAIL THEFT%"), icon5, like(description, "%TO VEHICLE%"), icon7, 1=1, icon8),
iconColor=case(like(description, "%SIMPLE%"), "#f4b541", like(description, "%DOMESTIC BATTERY%"), "#f44149", like(description, "%500 AND UNDER%"), "#f441dc", like(description, "%TO PROPERTY%"), "#a341f4", like(description, "%RETAIL THEFT%"), "#41f458", like(description, "%TO VEHICLE%"), "#41f4eb",1=1, "#4286f4"),
layerDescription=case(like(description, "%SIMPLE%"), icon1, like(description, "%DOMESTIC BATTERY%"), icon2, like(description, "%500 AND UNDER%"), icon3, like(description, "%TO PROPERTY%"), icon4, like(description, "%RETAIL THEFT%"), icon5, like(description, "%TO VEHICLE%"), icon7, 1=1, icon8),
extraClasses=if(markerType="icon", "$iconSize$", "fa-lg")
| eval description = "&lt;b&gt;".description."&lt;/b&gt;", tooltip=description, clusterGroup="default"
| table latitude, longitude, description, tooltip, markerColor, icon, clusterGroup, prefix, markerType, iconColor, extraClasses, layerDescription</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="leaflet_maps_app.maps-plus.allPopups">0</option>
        <option name="leaflet_maps_app.maps-plus.animate">1</option>
        <option name="leaflet_maps_app.maps-plus.autoFitAndZoom">1</option>
        <option name="leaflet_maps_app.maps-plus.autoFitAndZoomDelay">500</option>
        <option name="leaflet_maps_app.maps-plus.bingMaps">0</option>
